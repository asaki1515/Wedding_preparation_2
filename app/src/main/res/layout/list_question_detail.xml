<?xml version="1.0" encoding="utf-8"?>
<!--リストの一番上に表示させる質問のためのレイアウト-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView android:id="@+id/ScrollView01"
        android:layout_width="fill_parent" android:layout_height="fill_parent">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/imageView"
            android:layout_margin="2dp"
            android:background="#d3d3d3"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/bodyTextView"
        android:inputType="textMultiLine"
        android:layout_below="@+id/imageView"
        android:paddingTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="参考URL："
        android:id="@+id/TextView"
        android:inputType="textMultiLine"
        android:layout_below="@+id/bodyTextView"
        android:paddingTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/TextView2"
        android:inputType="textMultiLine"
        android:layout_below="@+id/bodyTextView"
        android:layout_toRightOf="@+id/TextView"
        android:paddingTop="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="なし"
        android:id="@+id/urlTextView"
        android:inputType="textMultiLine"
        android:layout_below="@+id/TextView"
        android:autoLink="web"
        android:paddingTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="参考ファイル："
                android:id="@+id/fileTextView"
                android:inputType="textMultiLine"
                android:layout_below="@+id/urlTextView"
                android:paddingTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/fileTextView2"
                android:inputType="textMultiLine"
                android:layout_below="@+id/urlTextView"
                android:layout_toRightOf="@+id/fileTextView"
                android:paddingTop="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/filelinkTextView"
                android:inputType="textMultiLine"
                android:layout_below="@+id/fileTextView2"
                android:autoLink="web"
                android:paddingTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/nameTextView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/filelinkTextView"
        android:paddingTop="20dp"/>



        </RelativeLayout>
    </ScrollView>
</RelativeLayout>